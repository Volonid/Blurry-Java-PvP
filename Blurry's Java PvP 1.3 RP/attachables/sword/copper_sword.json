{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "bf:copper_sword",
			"materials": {
				"default": "entity_alphatest",
				"enchanted": "entity_alphatest_glint"
			},
			"textures": {
				"default": "textures/items/copper_sword",
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			"geometry": {
				"first_person": "geometry.item_first_person",
				"third_person": "geometry.item_third_person",
				"offhand": "geometry.item_first_person_offhand",
				"aoffhand": "geometry.item_third_person_offhand"
			},
			"animations": {
				"wield": "animation.bow.wield",
				"wield_first_person_pull": "animation.bow.wield_first_person_pull",
				"offhand": "animation.bow_offhand.wield"
			},
			"render_controllers": [
				{
					"controller.render.third_person": "query.is_item_name_any('slot.weapon.mainhand', 0, 'bf:copper_sword') && !(c.is_first_person)"
				},
				{
					"controller.render.first_person": "query.is_item_name_any('slot.weapon.mainhand', 0, 'bf:copper_sword') && (c.is_first_person)"
				},
				{"controller.render.item_default_offhand": "query.is_item_name_any('slot.weapon.offhand', 0, 'bf:copper_sword')"} 
			],
			"scripts": {
				"animate": [
					"wield",
					{
						"offhand": "query.is_item_name_any('slot.weapon.offhand', 0, 'bf:copper_sword')"
					}
				]
			},
			"item": {
				"minecraft:copper_sword": "query.owner_identifier == 'minecraft:player'"
			}
		}
	}
}